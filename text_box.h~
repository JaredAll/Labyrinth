#ifndef TEXT_BOX
#define TEXT_BOX

#include <SDL.h>


using namespace std;

/**
 * a class to represent a text box
 * @author Jared Allen
 * @version 1 June 2019
 */
class Text_box
{
public:

  Text_box::Text_box( uint param_x, param_y, param_h, param_w )
    : x_pos( param_x ), y_pos( param_y ), box_height( param_h ),
    box_width( param_w )
    {
      
    }


private:

  uint x_pos;
  uint y_pos;
  uint box_width;
  uint box_height;

};

#endif
